<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEBEE"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dungeons and Dragons"
        android:textSize="32sp"
        android:textColor="#000000"
        android:fontFamily="@font/hello_kitty_font"
        android:gravity="center"
        android:paddingBottom="20dp"/>

    <ImageView
        android:id="@+id/dnd_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/hello_kitty_image"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/create_character_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create character"
        android:backgroundTint="#E91E63"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/view_characters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View characters"
        android:backgroundTint="#E91E63"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/by_isabela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Isabela Class"
        android:textSize="12sp"
        android:textColor="#000000"
        android:fontFamily="@font/hello_kitty_font"
        android:gravity="center"/>
</LinearLayout>
